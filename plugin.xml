<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.commands">
      <category
            name="Keyboard awesomeness"
            id="org.rileyberton.eclipse.smart_tab.commands.category">
      </category>
      <command
            name="Smart Tab"
            categoryId="org.rileyberton.eclipse.smart_tab.commands.category"
            id="org.rileyberton.eclipse.smart_tab.commands.doit">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            commandId="org.rileyberton.eclipse.smart_tab.commands.doit"
            class="org.rileyberton.eclipse.smart_tab.handlers.TabHandler">
      </handler>
   </extension> <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="org.rileyberton.eclipse.smart_tab.commands.doit"
            contextId="org.eclipse.ui.textEditorScope" sequence="TAB"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration">
      </key>
   </extension>

</plugin>
